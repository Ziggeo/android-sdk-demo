<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.ziggeo.demo">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.ziggeo.androidsdk.demo.ZiggeoSdkDemoApp"
        android:icon="@mipmap/ic_launcher_round"
        android:label="@string/app_name"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name="com.ziggeo.androidsdk.demo.recorders.FullscreenRecorderActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.ziggeo.androidsdk.demo.recorders.EmbeddedRecorderActivity" />

        <activity android:name="com.ziggeo.androidsdk.demo.recorders.CameraViewActivity" />

        <activity android:name="com.ziggeo.androidsdk.demo.players.ZiggeoPlayerActivity" />
        <activity android:name="com.ziggeo.androidsdk.demo.players.YouTubePlayerActivity" />
        <activity android:name="com.ziggeo.androidsdk.demo.players.VimeoPlayerActivity" />
        <activity android:name="com.ziggeo.androidsdk.demo.DeepLinkingDemoActivity" />
        <activity android:name="com.ziggeo.androidsdk.demo.recorders.AudioRecorderActivity" />
    </application>

</manifest>
