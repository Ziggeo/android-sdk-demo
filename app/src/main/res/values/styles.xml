<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/quicksand_regular</item>
        <item name="android:buttonStyle">@style/Button</item>
    </style>

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="backgroundTint">@color/colorPrimaryLight</item>
    </style>

    <style name="ProgressDialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorAccent">@color/white</item>
        <item name="fontFamily">@font/quicksand_regular</item>
    </style>

    <style name="PopupToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
    </style>

    <style name="Base.ToolbarStyle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:theme">@style/ToolbarTheme</item>
        <item name="popupTheme">@style/PopupToolbarTheme</item>
    </style>

    <style name="ToolbarStyle" parent="Base.ToolbarStyle" />

    <style name="MenuItemStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/selector_light_grey_to_white</item>
        <item name="android:drawablePadding">@dimen/drawer_menu_margin</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">@dimen/drawer_menu_margin</item>
        <item name="android:paddingLeft">@dimen/drawer_menu_margin</item>
        <item name="android:paddingTop">@dimen/common_margin</item>
        <item name="android:paddingEnd">@dimen/common_margin</item>
        <item name="android:paddingRight">@dimen/common_margin</item>
        <item name="android:paddingBottom">@dimen/common_margin</item>
    </style>

</resources>
